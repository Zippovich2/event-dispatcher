{
    "name": "zippovich2/event-dispatcher",
    "description": "Simple event dispatcher",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Skoropadskyi Roman",
            "email": "zipo.ckorop@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2.5"
    },
    "autoload": {
        "psr-4": {
            "Zippovich2\\EventDispatcher\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zippovich2\\EventDispatcher\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.1"
    },
    "scripts": {
        "cs-check": "php-cs-fixer fix --allow-risky=yes --diff --ansi --dry-run",
        "cs-fix": "php-cs-fixer fix --allow-risky=yes --diff --ansi",
        "tests": "phpunit --colors=always tests/"
    }
}
